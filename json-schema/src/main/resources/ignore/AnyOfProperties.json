{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$schemaId": "ast.v1.IceHockeyEventArgumentsStored",
  "$owner": "Kambi_Dev_Wild@kambi.com",
  "$topics": [
    "dp.v2.internal.ast.EventArgumentsStored"
  ],
  "title": "Event arguments stored",
  "description": "Contains all event arguments saved or updated. This are for all sports, clients can filter for interested sport.",
  "type": "object",
  "required": [
    "eventId",
    "matchPredictions"
  ],
  "properties": {
    "eventId": {
      "type": "integer",
      "format": "int64",
      "description": "Kambi event ID"
    },
    "matchPredictions": {
      "type": "object",
      "anyOf": [
        {
          "overUnder": {
            "type": "object",
            "properties": {
              "line": {
                "type": "number"
              },
              "over": {
                "type": "integer"
              },
              "under": {
                "type": "integer"
              }
            },
            "required": [
              "line",
              "over",
              "under"
            ]
          },
          "oneXTwo": {
            "type": "object",
            "properties": {
              "home": {
                "type": "number",
                "minimum": 0
              },
              "away": {
                "type": "number",
                "minimum": 0
              },
              "draw": {
                "type": "number",
                "minimum": 0
              }
            },
            "required": [
              "home",
              "away",
              "draw"
            ]
          }
        }
      ],
      "required": [
        "overUnder",
        "oneXTwo"
      ]
    }
  }
}